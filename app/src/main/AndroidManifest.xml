<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="steam.com.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".application.SteamClassApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivityPerson"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait" />
        <activity
            android:name=".P_InformationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".P_PointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CourseDetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" /> <!-- or android:screenOrientation="landscape"-->
        <activity
            android:name=".OrderListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OrderDetailActivity"
            android:screenOrientation="portrait" />
        <!-- or android:screenOrientation="landscape"-->
        <activity
            android:name=".CollectActivity"
            android:screenOrientation="portrait" />
        <!-- or android:screenOrientation="landscape"-->

    </application>

</manifest>