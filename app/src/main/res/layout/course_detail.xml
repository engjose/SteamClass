<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <cn.jzvd.JzvdStd
            android:id="@+id/videoplayer"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程标题"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/course_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="价格"
                android:textSize="20dp"
                android:textColor="#FF1100"/>
            <Button
                android:id="@+id/btn_learn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="加入学习"
                android:textColor="#F9FCFC"
                android:background="#00DDFF"/>
            <Button
                android:id="@+id/btn_collected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="收藏"
                android:background="#E5E7EB" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="课程简介:"
            android:textSize="17dp"
            android:textColor="#0099FF"/>
        <TextView
            android:id="@+id/course_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="课程简介"
            android:textSize="15dp" />
      <View
          android:layout_width="fill_parent"
          android:layout_height="5dp"
          android:layout_marginTop="10dp"
          android:background="#E5E7EB"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="老师介绍:"
            android:textSize="17dp"
            android:textColor="#0099FF"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/teacher_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/teacher_pic"
                app:civ_border_color="#FBF9F9"
                app:civ_border_width="2dp" />
            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="教师名称"
                android:textSize="15dp"
                android:textColor="#080808"
                android:layout_toRightOf="@+id/teacher_pic"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/teacher_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="教师简介"
                android:textSize="15dp"
                android:layout_marginTop="90dp"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="#E5E7EB"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:text="机构介绍:"
            android:textSize="17dp"
            android:textColor="#0099FF"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/merchant_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/merchant_pic"
                app:civ_border_color="#FBF9F9"
                app:civ_border_width="2dp" />
            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/merchant_pic"
                android:layout_marginTop="30dp"
                android:text="机构名称"
                android:textSize="15dp"
                android:textColor="#080808"/>
            <TextView
                android:id="@+id/merchant_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="机构简介"
                android:textSize="15dp"
                android:layout_marginTop="90dp"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>